# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# authors
GET      /authors       controllers.AuthorsController.findAll
GET      /authors/:id   controllers.AuthorsController.findById(id: Int)
POST     /authors       controllers.AuthorsController.create
PUT      /authors/:id   controllers.AuthorsController.update(id: Int)
DELETE   /authors/:id   controllers.AuthorsController.delete(id: Int)

# books
GET      /books         controllers.BooksController.findAll
GET      /books/:id     controllers.BooksController.findById(id: Int)
POST     /books         controllers.BooksController.create
PUT      /books/:id     controllers.BooksController.update(id: Int)
DELETE   /books/:id     controllers.BooksController.delete(id: Int)